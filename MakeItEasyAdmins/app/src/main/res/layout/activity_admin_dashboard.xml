<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard"
    android:background="#3F51B5">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin DashBoard"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>
<RelativeLayout
    android:layout_below="@+id/toolbar"
    android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@drawable/round_bg_white"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="15sp"

        android:scrollbarFadeDuration="0"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================================= Button 1==================================-->
            <RelativeLayout
                android:id="@+id/Dashboard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:id="@+id/Dashboard1_Box"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_corner_bg_green">

                    <TextView
                        android:id="@+id/db1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/patua_one"
                        android:includeFontPadding="false"
                        android:padding="15dp"
                        android:text="Videos\nLectures"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/db1_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="#00000000"
                        android:padding="10dp"
                         />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/db1_image"
                    android:layout_width="125dp"
                    android:layout_height="95dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/videolecture" />

            </RelativeLayout>

            <!-- ===== Button 2===-->
            <RelativeLayout
                android:id="@+id/Dashboard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:id="@+id/Dashboard2_Box"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_corner_bg_yellow">

                    <TextView
                        android:id="@+id/db2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/baloo"
                        android:includeFontPadding="false"
                        android:padding="15dp"
                        android:text="Quiz..."
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/db2_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="#00000000"
                        android:padding="10dp"
                         />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/db2_image"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/quiz" />

            </RelativeLayout>


            <!-- ============= Button 3===-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_corner_bg_bright_blue">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/baloo"
                        android:includeFontPadding="false"
                        android:padding="15dp"
                        android:text="Add New\nAdmin"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/bd5_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="#00000000"
                        android:padding="10dp"
                         />


                </RelativeLayout>

                <ImageView

                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="0dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/admin" />

            </RelativeLayout>




            <!-- ============= Button 3===-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_corner_bg_red">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/baloo"
                        android:includeFontPadding="false"
                        android:padding="15dp"
                        android:text="Push\nNotifications"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/bd3_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="#00000000"
                        android:padding="10dp"
                        />


                </RelativeLayout>

                <ImageView

                    android:layout_width="127dp"
                    android:layout_height="124dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/noticifations" />

            </RelativeLayout>

            <!-- ============= Button 4===-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/rounded_corner_bg_yellow">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/baloo"
                        android:includeFontPadding="false"
                        android:padding="15dp"
                        android:text="Logout"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <Button

                        android:id="@+id/bd4_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="#00000000"
                        android:padding="10dp"
                        />


                </RelativeLayout>

                <ImageView

                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="0dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logout" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>