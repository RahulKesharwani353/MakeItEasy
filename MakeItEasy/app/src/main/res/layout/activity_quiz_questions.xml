<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQuestions">

    <RelativeLayout
        android:id="@+id/grediant"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_blue_gradiant"/>
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: 1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Question_BOX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="100dp"
        android:text="Question Question Question kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
        android:textSize="25dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:textColor="@color/basic_white"
        />


    <RelativeLayout
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/grediant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_rounded_white_bg">

    </RelativeLayout>
</RelativeLayout>